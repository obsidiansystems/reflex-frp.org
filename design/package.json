{
  "name": "static-design-spec",
  "version": "1.0.0",
  "description": "A static website delivering HTML/CSS design spec for the real website.",
  "scripts": {
    "build": "npm run html & npm run css",
    "serve": "live-server public",
    "work": "live-server public & npm run watch",
    "watch": "npm run watchcss & npm run watchhtml",
    "html": "gulp",
    "watchhtml": "onchange 'src/html/**' -- npm run html",
    "css": "postcss src/css/tailwind.css -o public/css/tailwind.css",
    "watchcss": "onchange 'src/css/**' 'postcss.config.js' 'tailwind.config.js'  -- npm run css"
  },
  "author": "Obsidian Systems, LLC",
  "dependencies": {
    "@tailwindcss/ui": "^0.4.0",
    "autoprefixer": "^9.8.5",
    "gulp": "^4.0.2",
    "gulp-nunjucks-render": "^2.2.3",
    "live-server": "^1.2.1",
    "npm-watch": "^0.7.0",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "tailwindcss": "^1.5.1"
  }
}
